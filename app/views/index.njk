{% extends "layout.njk" %}

{% block pageTitle %}
  What do you want to do?
{% endblock %}

{% block content %}
<div class="govuk-form-group" style="margin:0px">
  {{ govukButton({ text: 'English' }) }}
  {{ govukButton({ text: 'عربى' }) }}
  {{ govukButton({ text: 'Español' }) }}
  {{ govukButton({ text: 'Other' }) }}
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column">

    <br/>

    <h1 class="govuk-heading-xl">
    What do you need help with?
    </h1>
    <a href="/food-bank" class ="float-left px-2 py-2">
      <div class="card" style="width: 15rem;">
        <img class="card-img-top" src="/images/food.png" alt="Looking for food">
        <div class="card-body">
          <h4 class="card-title text-center">Food</h4>
        </div>
      </div>
    </a>
    <a href="/uncomfortable-details" class ="float-left px-2 py-2">
      <div class="card" style="width: 15rem;">
        <img class="card-img-top" src="/images/privacy.png" alt="Looking for food">
        <div class="card-body">
          <h5 class="card-title text-center">Share information</h5>
        </div>
      </div>
    </a>
    <a href="/mental-health" class ="float-left px-2 py-2">
      <div class="card" style="width: 15rem;">
        <img class="card-img-top" src="/images/mental_health.png" alt="Looking for food">
        <div class="card-body">
          <h5 class="card-title text-center">Mental Health Support</h5>
        </div>
      </div>
    </a>
  </div>
</div>

{% endblock %}
